# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hrms_saas_db_db
DB_USER=hrms_user
DB_PASSWORD=root
DATABASE_URL=postgresql://hrms_user:root@localhost:5432/hrms_saas_db_db

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Configuration
EMAIL_FROM_NAME=HR Management System
EMAIL_FROM=noreply@hrms.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_min_64_chars_recommended
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_64_chars_recommended

# Logging
LOG_LEVEL=debug